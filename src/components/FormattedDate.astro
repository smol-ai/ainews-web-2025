---
interface Props {
  date: Date;
}

const { date } = Astro.props;
const currentYear = new Date().getFullYear();
const showYear = date.getFullYear() !== currentYear;

---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-US", {
      month: "short", 
      day: "2-digit",
      ...(showYear && {year: "numeric"})
    })
  }
</time>

---
import Layout from '../../layouts/Layout.astro';
import SpeakerLightboxComp from '../../components/SpeakerLightbox.astro';
---

<Layout title="Speaker Lightbox Test" description="Demo for speaker lightbox">
  <div class="container mx-auto px-4 py-8 speaker-section">
    <h1 class="text-3xl font-bold mb-8">Speaker Lightbox Demo</h1>
    <div class="flex flex-wrap gap-4">
      <img src="/astro-sphere.jpg" class="speaker-photo w-32 h-32 object-cover rounded-full" data-name="Alice" data-company="Acme" data-talk="Scaling AI" />
      <img src="/astro-nano.png" class="speaker-photo w-32 h-32 object-cover rounded-full" data-name="Bob" data-company="Beta Corp" data-talk="AI Ethics" />
      <img src="/astro-micro.jpg" class="speaker-photo w-32 h-32 object-cover rounded-full" data-name="Carol" data-company="Gamma" data-talk="Agents" />
      <img src="/lighthouse-sphere.jpg" class="speaker-photo w-32 h-32 object-cover rounded-full" data-name="Dave" data-company="Delta" data-talk="RAG" />
    </div>
  </div>
  <SpeakerLightboxComp />
</Layout>

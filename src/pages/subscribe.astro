---
import Container from '../components/Container.astro';
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SubscribeForm from '../components/SubscribeForm.astro';

// Page metadata
const title = 'Subscribe to the Newsletter';
const description = 'Stay up to date with the latest AI news and insights by subscribing to our newsletter.';
---

<html lang="en">
  <head>
    <Head title={title} description={description} />
  </head>
  <body class="flex min-h-screen flex-col bg-white text-zinc-900 dark:bg-zinc-900 dark:text-zinc-100">
    <Header />
    
    <main class="flex-1">
      <Container>
        <div class="mx-auto max-w-3xl py-16 text-center">
          <h1 class="mb-4 text-4xl font-bold sm:text-5xl">Get the top AINews every weekday</h1>
          <p class="mb-8 text-lg text-zinc-700 dark:text-zinc-300">
            The top newsletter for AI Engineers, pulling from all across the web with dozens of research agents.
          </p>
          
          <div class="mx-auto max-w-xl">
            <SubscribeForm />
          </div>
          
          <div class="mt-10 text-sm text-zinc-600 dark:text-zinc-400">
            <p>We respect your privacy. Your email is only used to send you AINews/SmolAI content. Unsubscribe link in every email.</p>
            <!-- <p class="mt-2">
              By subscribing, you agree to receive our newsletter and accept our 
              <a href="#" class="text-blue-600 underline dark:text-blue-400">Privacy Policy</a>.
            </p> -->
          </div>
        </div>
      </Container>
    </main>
    
    <Footer />
  </body>
</html> 